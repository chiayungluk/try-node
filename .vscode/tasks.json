{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "docker-build",
      "label": "docker-build",
      "platform": "node",
      "dockerBuild": {
        "dockerfile": "${workspaceFolder}/Dockerfile",
        "context": "${workspaceFolder}",
        "pull": true,
        "tag": "ghcr.io/chiayungluk/try-node:latest",
        "labels": {
          "org.opencontainers.image.source": "https://github.com/chiayungluk/try-node",
          "org.opencontainers.image.description": "Node.js sample project",
          "org.opencontainers.image.licenses": "MIT"
        }
      }
    },
    {
      "type": "docker-run",
      "label": "docker-run: release",
      "dependsOn": ["docker-build"],
      "platform": "node"
    },
    {
      "type": "docker-run",
      "label": "docker-run: debug",
      "dependsOn": ["docker-build"],
      "dockerRun": {
        "env": {
          "DEBUG": "*",
          "NODE_ENV": "development"
        },
        "command": "npm run start:debug"
      },
      "node": {
        "enableDebugging": true
      }
    }
  ]
}
